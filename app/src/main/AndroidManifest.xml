<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nutritionapplication">

    <uses-permission android:name="android.permission.INTERNET" />                     <!-- Permission for internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />     <!-- Permission for accessing storage -->

    <application
        android:name=".NutritionAndroidApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NutritionApplication"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".deleteFoodFromRecipeActivity"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".DisplayRezeptActivity"
            android:parentActivityName=".SearchbarActivity"
            android:exported="false" />

        <activity
            android:name=".ListNormalActivity"
            android:parentActivityName=".SearchbarActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".addFoodToRecipeActivity"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".AddRecipeActivity"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".SearchbarActivity"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".DeleteRecipeActivity"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".MealActivity"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".FoodListActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".MealAddingActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".FoodSearchActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".EntryAddingActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".SingUpActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".SingInActivity"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>